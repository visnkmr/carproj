{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Disables all strict type-checking options
    "noImplicitAny": false, // Disables errors for implicit 'any'
    "strictNullChecks": false, // Disables checking for null and undefined
    "noImplicitThis": false, // Disables checking for 'this' typing
    "skipLibCheck": true, // Skips type checking of declaration files (useful for third-party libraries)
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
"noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
